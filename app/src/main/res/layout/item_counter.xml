<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="counterWidget" type="com.example.hirono_mayuko.redashclient2.widget.CounterWidget" />
    </data>
    <LinearLayout
        android:id="@+id/widgetWrapper"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:elevation="3dp">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/errMsg"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/queryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="23sp"
            android:text="@{counterWidget.mQueryName}"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/textVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:text="@{counterWidget.mValue}"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/visualName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:text="@{counterWidget.mVisualName}"
            android:visibility="invisible"/>
    </LinearLayout>
</layout>
